{
  "name": "HuntSplash",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Product Hunt + Unsplash",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "*://api.producthunt.com/*",
    "*://api.unsplash.com/*",
    "webRequestBlocking",
    "storage",
    "webRequest",
    "tabs"
  ],
  "web_accessible_resources": [
    "main.js",
    "client.*.css"
  ],
  "content_security_policy": "script-src https://images.unsplash.com 'self' 'unsafe-eval'; object-src 'self'"
}
